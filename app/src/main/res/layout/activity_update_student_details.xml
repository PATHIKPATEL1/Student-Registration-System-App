<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".UpdateStudentDetails">


    <android.support.v7.widget.Toolbar
        android:id="@+id/update_details_student_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints"
        android:backgroundTint="@color/color_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_details_student_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="81dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@android:color/background_light"
                app:cardCornerRadius="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/student_registration_toolbar">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimaryDark">

                                    <TableRow android:background="@android:color/white">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:text="Firstname"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_firstname"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:text="Middlename"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_middlename"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow android:background="@android:color/white">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:text="Lastname"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_lastname"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:text="Date Of Birth"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_date_of_birth"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow android:background="@android:color/white">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:text="Gender"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_gender"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:text="Email Id"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow android:background="@android:color/white">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:text="Mobile No"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_mobileno"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:text="Address"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_address"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow android:background="@android:color/white">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:text="State"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_state"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:text="Enrollment No"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_enrollmentno"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow android:background="@android:color/white">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:text="Branch"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_spinner_addstudent_branch"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:text="Semester"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_spinner_addstudent_semester"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/white"
                                            android:gravity="center"
                                            android:textSize="25dp" />
                                    </TableRow>

                                    <TableRow android:background="@android:color/white">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:text="Institute"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />

                                        <TextView
                                            android:id="@+id/update_details_addstudent_institutename"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginBottom="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimaryDark"
                                            android:gravity="center"
                                            android:textColor="@android:color/white"
                                            android:textSize="25dp" />
                                    </TableRow>

                                </TableLayout>
                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>
                </ScrollView>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>